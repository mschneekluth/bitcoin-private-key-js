<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtual dice to create bitcoin addresses</title>
</head>
<body>
    <button id="dice">Roll the dice</button>
    <p>Your Bitcoin Private Key is: <strong id="adress"></strong> </p>
    <br>
        This is a Bitcoin Private Key in Base6 Format. To get your Bitcoin Adress go to https://www.bitaddress.org/ 
        -> Wallet Details and enter this key. It also displays the Private Key in a more common format. Recommanded to use Bitadress.org offline.
    <br>
        To use offline: Right click + Save as. Open in Web browser.
</body>
</html>

<script>
    document.getElementById("dice").addEventListener("click", generateNewAdress);


    function getBtcAdress() {
        var num;
        var adress = "";

        for (var i = 0; i<99; i++) {
            num = randomNumber(0,6).toString();
            adress = adress.concat(num);
        }
        console.log(adress)
        document.getElementById("adress").textContent = adress;
    };

    function randomNumber(min, max) {  
        return Math.floor(Math.random() * (max - min) + min); 
    }

    function generateNewAdress() {
        document.getElementById("text").innerHTML = getBtcAdress();
    }

    getBtcAdress();

</script>